{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Dashboard is public for authenticated users",
            "rule": "authenticated"
          }
        ]
      }
    }
  },
  "/courses": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Courses page requires authentication",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/assignments": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Assignments page requires authentication", 
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/calendar": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Calendar page requires authentication",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/grades": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Grades page requires authentication",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Callback page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/reset-password/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Reset password pages are public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/prompt-password/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Prompt password pages are public",
            "rule": "public"
          }
        ]
      }
    }
  }
}